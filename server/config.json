{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 9000,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "paginator": {
      "limit": 5,   
      "maxLimit": 100,  
      "noMaxLimit": true 
    },
    "cors": false
  }
}
